// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @default(autoincrement()) @id
  uid String @unique
  name String?
  profile Profile?
  collection Collection?
}

model Profile {
  id Int @default(autoincrement()) @id
  bio String?
  user User @relation(fields: userId, references: id)
  userId Int
}

model Collection {
  id Int @default(autoincrement()) @id
  user User @relation(fields: userId, references: id)
  book Book @relation(fields: bookId, references: id)
  userId Int
  bookId Int
}

model Book {
  id Int @default(autoincrement()) @id
  title String?
  category Category?
  author Author?
}

model Category {
  id Int @default(autoincrement()) @id
  name String?
  book Book?
}

model Author {
  id Int @default(autoincrement()) @id
  name String?
  book Book?
}
